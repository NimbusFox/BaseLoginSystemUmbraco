@using BaseLoginSystemUmbraco.CodeLibraries.Core
@model BaseLoginSystemUmbraco.Models.Core.Menu.MenuRootModel
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
        <a class="navbar-brand" href="@GlobalHelper.GetRoot().Url">@Model.Title</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor02">
            @if (Model.HasChildren) {
                <ul class="navbar-nav mr-auto" >
                    @foreach (var child in Model.Children) {
                        Html.RenderAction(child.DocumentTypeAlias, "ContentBuilder", new {page = child});
                    }
                </ul>
            }
        </div>
    </div>
</nav>