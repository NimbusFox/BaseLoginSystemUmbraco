@using BaseLoginSystemUmbraco.CodeLibraries.Core
@using BaseLoginSystemUmbraco.Models.Core
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
    var site = new SiteModel(GlobalHelper.GetRoot());
}
@section js {
    @Scripts.Render("~/bundles/Scripts")
}
@section css {
    @Styles.Render("~/bundles/Style")
}
@if (Request.Path != "/") {
    @RenderBody()
} else {
    Html.RenderPartial("~/Views/Shared/Core/Page.cshtml", site.Pages.DefaultPage);
}
@if (site.Menu != null) {
    Html.RenderAction("menuRoot", "ContentBuilder", new {page = site.Menu});
}